<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_age_effect_age_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="此处应有年龄说明"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_age_effect_effect_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:text="此处应有第一条说明\n此处应有第二条说明\n此处应有第三条说明\n......"
        android:textColor="@color/black"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/dialog_age_effect_hint_please"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:textColor="#F08080"
        android:text="教育增强检定不会使教育值超过99\n请按照提示自行修改属性值"/>

    <ImageButton
        android:id="@+id/dialog_profession_select_btn_ensure"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_rect_solid"
        android:onClick="onClick"
        android:src="@drawable/ic_check"
        android:layout_gravity="center" />

</LinearLayout>