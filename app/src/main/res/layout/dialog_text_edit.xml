<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_text_edit_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="标题"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_text_et"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:hint="请输入"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_text_edit_title_tv" />

    <TextView
        android:id="@+id/dialog_text_edit_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="此处应有提示内容"
        android:textColor="#F08080"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/dialog_text_edit_btn_ensure"
        app:layout_constraintTop_toBottomOf="@id/dialog_text_et" />
    <ImageButton
        android:id="@+id/dialog_text_edit_btn_ensure"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/btn_rect_solid"
        android:src="@drawable/ic_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_text_edit_hint" />

</androidx.constraintlayout.widget.ConstraintLayout>