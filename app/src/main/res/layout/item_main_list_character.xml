<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:gravity="center_vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_main_list_character_iv_portrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:actualImageScaleType="fitCenter"
        app:placeholderImage="@drawable/ic_baseline_portrait_24"
        app:placeholderImageScaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_main_list_character_iv_portrait"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_main_list_character_tv_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_main_list_character_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄，性别"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_main_list_character_tv_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="调查员职业"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>